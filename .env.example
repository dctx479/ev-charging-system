# ==========================================
# EV Charging System - 环境变量配置模板
# ==========================================
# 复制此文件为 .env 并填入实际值
# 注意：.env 文件已在 .gitignore 中排除，不会被提交

# ==========================================
# 数据库配置 (MySQL)
# ==========================================
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=ev_charging
MYSQL_USER=evuser
MYSQL_PASSWORD=your_secure_user_password

# Spring Boot 数据源配置
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ev_charging
DB_USERNAME=root
DB_PASSWORD=your_secure_password

# ==========================================
# Redis 配置
# ==========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# ==========================================
# RabbitMQ 配置
# ==========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your_rabbitmq_password

# ==========================================
# JWT 认证配置
# ==========================================
# 请使用强随机字符串，至少32字符
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_chars
JWT_EXPIRATION=86400000

# ==========================================
# 高德地图 API 配置
# ==========================================
# 前往 https://console.amap.com 获取
AMAP_KEY=your_amap_api_key
AMAP_SECURITY_CODE=your_amap_security_code

# ==========================================
# AI 服务配置
# ==========================================
AI_SERVICE_URL=http://localhost:5000
AI_CONNECT_TIMEOUT=5000
AI_READ_TIMEOUT=10000

# ==========================================
# 服务器配置
# ==========================================
SERVER_PORT=8080
